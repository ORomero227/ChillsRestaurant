@model ApplicationUser
@{
    ViewData["Title"] = "Confirm Email and Phonenumber";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="container-fluid maincontainer">
    <div class="row justify-content-center">
        <section id="form-section" class="col-md-6">

            <h3>Confirm Email and Phone</h3>
            <p>We have sent the confirmation code to your email and phone number</p>

            <hr />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="container alert alert-danger" role="alert">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(e => e.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            
            <form id="account" method="post" asp-action="ConfirmAccountPost" asp-controller="Account">

                <label class="form-label">@Model.Email: </label>
                <input class="form-control" type="text" placeholder="code" required/>

                <label class="form-label">@Model.PhoneNumber: </label>
                <input class="form-control" type="text" placeholder="code" required/>

                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="PhoneNumber" />
                <button type="submit" class=" mt-3 btn btn-primary">Confirm</button>
            </form>
           
        </section>
    </div>
</div>
