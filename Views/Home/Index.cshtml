@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">

    <div class="container-fluid">
    @{
        if (TempData["ErrorAddToCart"] != null)
        {
            <div class="container alert alert-danger d-flex justify-content-between" role="alert">
                @TempData["ErrorAddToCart"]
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        if (TempData["SuccessAddToCart"] != null)
        {
            <div class="container alert alert-success d-flex justify-content-between" role="alert">
                 <div>
                    @TempData["SuccessAddToCart"]
                    <a asp-area="" asp-controller="Order" asp-action="CurrentOrder">View My Order</a>
                 </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
    </div>

    <section class="menu-section">
        <h2>Variety Of Burgers</h2>

        <div class="row row-cols-1 row-cols-md-6 g-4 mt-2 mb-3">
            @foreach(var burger in ViewBag.ListOfBurgers)
            {
                <div class="col">
                    <div class="card mx-auto h-100">
                        <img src="~/images/Comida/@burger.Photo" class="card-img-top" alt="...">
                        <div class="card-body menu-item">
                            <h5 class="card-title">@burger.Name</h5>
                            <p class="card-text">@burger.Description</p>
                        </div>
                        <div class="card-footer text-center">
                            <p class="card-text">$@burger.Price</p>
                            <div class="btn-group">
                                
                                <form method="post" asp-action="AddToOrder" asp-controller="Order">
                                    <input name="itemName" value="@burger.Name" hidden>
                                    <button class="btn btn-success" type="submit" data-bs-toggle="tooltip" title="Add To Order">
                                        <i class="fa-solid fa-cart-plus me-3"></i>Add To Order
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    
